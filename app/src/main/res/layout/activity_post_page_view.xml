<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#404040">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#404040"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Imv_back_logo"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:padding="10dp"
            android:background="#404040"
            android:gravity="center"
            android:src="@drawable/goback" />

        <TextView
            android:id="@+id/Im_logo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/dancing_script"
            android:gravity="center"
            android:text="Create Post"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#404040"
            android:gravity="end"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_post"
                android:layout_width="75dp"
                android:layout_height="40dp"
                android:background="@drawable/rounded_corner_gray"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:clickable="true"
                android:gravity="center"
                android:text="   Post   "
                android:textColor="#FFFFFF"
                android:textSize="16dp"></TextView>


        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#404040"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Imv_post_page_user_img"
                android:layout_width="69dp"
                android:layout_height="61dp"
                android:layout_gravity="left"
                android:clickable="true"
                android:layout_marginLeft="5dp"/>



            <TextView
                android:id="@+id/tv_post_page_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:textSize="16dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#404040"
            android:gravity="center"
            android:orientation="vertical">





            <EditText
                android:id="@+id/et_post_details"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_gravity="start"
                android:clickable="true"
                android:hint="What you have lost?"
                android:background="@null"
                android:padding="15dp"
                android:textColor="#ffffff"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/Imv_post_img"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"

                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/button_upload_post_image"
                android:layout_width="120dp"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:background="@drawable/uploadimage"
                android:clickable="true" />
        </LinearLayout>


    </LinearLayout>


</ScrollView>


</LinearLayout>





