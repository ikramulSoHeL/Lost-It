<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="#eeeeee">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eeeeee">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/edit_profile_details_img_upload"
            android:layout_width="127dp"
            android:layout_height="127dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/button_upload_post_image"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_corner"
            android:clickable="true"
            android:gravity="center"
            android:padding="4dp"
            android:text="Upload"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/pe_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Edit Details"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/profile" />

            <EditText
                android:id="@+id/pe_name"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:hint="Name"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/profile" />

            <EditText
                android:id="@+id/pe_surname"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:clickable="true"
                android:hint="Surname"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/dob" />

            <EditText
                android:id="@+id/pe_dob"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:inputType="date"
                android:hint="Date of birth"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/job" />

            <EditText
                android:id="@+id/pe_institute"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:hint="Job/Education"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/email" />

            <TextView
                android:id="@+id/pe_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/phone" />

            <EditText
                android:id="@+id/pe_phone"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:inputType="number"
                android:hint="Phone Number"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/location" />

            <EditText
                android:id="@+id/pe_currentLocation"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:hint="Current Location"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/home" />

            <EditText
                android:id="@+id/pe_home"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:hint="Home Address"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/facebook" />

            <EditText
                android:id="@+id/pe_fbLink"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:hint="Facebook Link"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/instagram" />

            <EditText
                android:id="@+id/pe_instaLink"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:hint="Instagram Link"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/twitter" />

            <EditText
                android:id="@+id/pe_twitterLink"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:hint="Twitter Link"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/whatsapp" />

            <EditText
                android:id="@+id/pe_wAppNum"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:inputType="number"
                android:hint="What's app number"
                android:layout_gravity="center"
                android:textSize="16dp"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/pe_cancelBtn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rounded_corner_f"
                android:clickable="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="Cancel"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/pe_saveBtn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/rounded_corner"
                android:clickable="true"
                android:gravity="center"
                android:padding="4dp"
                android:text="Save"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</ScrollView>