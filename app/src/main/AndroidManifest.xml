<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.ewubd.lost_it">

  <uses-permission android:name="android.permission.INTERNET" />
  
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Lost_it">
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".All_Home_Activity"/>
        <activity android:name=".HomeActivity"/>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".LoginSignupActivity"/>
        <activity android:name=".PoliceStationDetailsActivity"/>
        <activity android:name=".PoliceStationInfoInputActivity"/>
        <activity android:name=".Post_Page_Activity"/>
        <activity android:name=".Profile_Activity"/>
        <activity android:name=".Profile_Details_Activity"/>
        <activity android:name=".Profile_Edit_Details_Activity"/>
        <activity android:name=".SignUpActivity"/>



        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>